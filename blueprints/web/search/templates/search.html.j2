{% extends 'base.html.j2' %}

{% block body %}
  <div class="container" id="search-page">
    <div class="row">
      <div class="col-md-3">

      </div>
      <div class="col-md-6">
        <h2>Search</h2>
        <div class="input-group">
          <input name="search" list="options" class="form-control" data-bind="textInput: query" autocomplete="off">
          <datalist id="options" data-bind="foreach: options">
            <option data-bind="attr: { value: $data }, text: $data"></option>
          </datalist>
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit" value="Submit">Search</button>
          </span>
        </div>

      </div>
    </div>
  </div>
{% endblock %}

{% block more_scripts %}
<script src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-3.4.2.js"></script>
  <script src="{{ url_for('search.static', filename='js/searchpage.js') }}"></script>
{% endblock %}
