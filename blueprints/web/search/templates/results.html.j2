{% extends 'base.html.j2' %}

{% block body %}
  <div class="container">
    <h2>Search for {{ page }}</h2>
    <div class="row">
      <div class="col-md-10">
        {% if categories %}
          <h3>Categories</h3>
          <div class="list-group">
            {% for category in categories %}
              <a class="list-group-item" href="{{ url_for('category.categories') }}#{{ category.name.replace(' ', '%20') }}">{{ category.name }}</a>
            {% endfor %}
          </div>
        {% endif %}

        {% if items %}
          <h3>Items</h3>
          <div class="list-group">
            {% for item in items %}
              <a class="list-group-item" href="{{ url_for('item.item', item_id=item.id) }}">{{ item.name }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
