{% extends "base.html.j2" %}

{% block body %}
  <div class="container">
    <ul class="pager">
      <li class="previous"><a href="/category/#{{ item.category.name }}"><span aria-hidden="true">&larr;</span>{{ item.category.name }}</a></li>
    </ul>
    {% if item.creator.id == session.user %}
      <button class="btn btn-danger btn-sm pull-right" id="delete">Delete</button>
      <a class="btn btn-warning btn-sm pull-right" href="{{ url_for('item.edit_item', item_id=item.id) }}">Edit</a>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{ item.name }}</h3>
      </div>
      <div class="panel-body">
        {{ item.description }}
      </div>
    </div>
  </div>
{% endblock %}

{% block more_scripts %}
  <script>
    // script imported to html to preserve state variable for CSRF protection
    {% include 'js/item.js.j2' %}
  </script>
{% endblock %}
